---
layout: base.njk

---
<nav class="breadcrumb" aria-label="breadcrumbs">
  <ul>
    <li><a href="{{ '/' | url }}">Home</a></li>
    <li class="is-active"><a href="{{ page.url | url }}">Colors</a></li>
  </ul>
</nav>
<h1 class="is-size-2 q-bottom-spacer">Colors</h1>

{% from "./macros/color-swatch.njk" import colorSwatch %}

{% for item in docs.colorMaps %}
  <div class="q-spacer">
    <h2 id="{{ item.name | slug }}" class="is-size-4 q-bottom-spacer">{{ item.name }}</h2>
    <div class="q-tiles">
      {% for color in item.list %}
        {{ colorSwatch(color) }}
      {% endfor %}
    </div>
  </div>
{% endfor %}

