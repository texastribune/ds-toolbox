{
  "name": "ds-toolbox-test",
  "version": "0.0.4",
  "description": "A demo repository to illustrate how to share palette and typography through NPM",
  "license": "MIT",
  "private": false,
  "files": [
    "/assets",
    "/tasks"
  ],
  "scripts": {
    "lint": "stylelint 'assets/**/**.scss' && prettier --write './tasks/**/*.js'",
    "deploy-docs": "npm run build-docs && surge ./docs/dist --domain 'https://ttds.surge.sh/'",
    "build-docs": "node docs/build/build.js",
    "dev-docs": "node docs/build/develop.js"
  },
  "browserslist": [
    "> 0.5%",
    "last 2 versions",
    "Firefox ESR",
    "iOS >= 11",
    "Safari >= 11",
    "not dead"
  ],
  "prettier": {
    "bracketSpacing": true,
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5"
  },
  "devDependencies": {
    "@texastribune/queso-tools": "^0.0.1-0",
    "axios": "^0.19.0",
    "browser-sync": "^2.26.3",
    "kss": "https://github.com/kss-node/kss-node",
    "markdown-it": "^8.4.2",
    "nunjucks": "^3.1.7",
    "prettier": "1.16.3",
    "purgecss": "^1.3.0",
    "purgecss-from-html": "^1.1.0",
    "stylelint": "^9.10.1",
    "surge": "^0.20.4"
  },
  "stylelint": {
    "rules": {
      "block-no-empty": null,
      "color-no-invalid-hex": true,
      "comment-empty-line-before": [
        "always",
        {
          "ignore": [
            "stylelint-commands",
            "after-comment"
          ]
        }
      ],
      "declaration-colon-space-after": "always",
      "indentation": 2,
      "max-empty-lines": 2,
      "rule-empty-line-before": [
        "always",
        {
          "except": [
            "first-nested"
          ],
          "ignore": [
            "after-comment"
          ]
        }
      ],
      "unit-whitelist": [
        "em",
        "rem",
        "%",
        "s",
        "px",
        "ms",
        "vh",
        "fr",
        "deg"
      ]
    }
  },
  "dependencies": {
    "ansi-colors": "^3.2.4",
    "autoprefixer": "^9.5.1",
    "clean-css": "^4.2.1",
    "fast-glob": "^2.2.6",
    "fs-extra": "^7.0.1",
    "glob-watcher": "^5.0.3",
    "node-sass": "^4.11.0",
    "normalize.css": "^8.0.1",
    "ora": "^3.4.0",
    "postcss": "^7.0.16",
    "sass-mq": "^5.0.0",
    "svgo": "^1.2.1",
    "svgstore": "^3.0.0-2"
  }
}
