{
  "name": "ds-toolbox-test",
  "version": "0.0.4",
  "description": "A demo repository to illustrate how to share palette and typography through NPM",
  "license": "MIT",
  "private": false,
  "files": [
    "/assets",
    "/tasks"
  ],
  "scripts": {
    "lint": "stylelint 'assets/**/**.scss' && prettier --write './tasks/**/*.js'",
    "deploy-docs": "npm run build-docs && surge dist --domain 'ttds.surge.sh'",
    "build-docs": "node docs/build/build.js",
    "dev-docs": "node docs/build/develop.js"
  },
  "prettier": {
    "bracketSpacing": true,
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5"
  },
  "devDependencies": {
    "browser-sync": "^2.26.3"
  },
  "stylelint": {
    "rules": {
      "block-no-empty": null,
      "color-no-invalid-hex": true,
      "comment-empty-line-before": [
        "always",
        {
          "ignore": [
            "stylelint-commands",
            "after-comment"
          ]
        }
      ],
      "declaration-colon-space-after": "always",
      "indentation": 2,
      "max-empty-lines": 2,
      "rule-empty-line-before": [
        "always",
        {
          "except": [
            "first-nested"
          ],
          "ignore": [
            "after-comment"
          ]
        }
      ],
      "unit-whitelist": [
        "em",
        "rem",
        "%",
        "s",
        "px",
        "ms",
        "vh",
        "fr",
        "deg"
      ]
    }
  },
  "dependencies": {
    "ansi-colors": "^3.2.4",
    "browser-sync": "^2.26.3",
    "clean-css": "^4.2.1",
    "fast-glob": "^2.2.6",
    "fs-extra": "^7.0.1",
    "glob-watcher": "^5.0.3",
    "kss": "https://github.com/kss-node/kss-node",
    "node-sass": "^4.11.0",
    "nunjucks": "^3.1.7",
    "ora": "^3.4.0",
    "prettier": "1.16.3",
    "stylelint": "^9.10.1",
    "svgo": "^1.2.1",
    "svgstore": "^3.0.0-2",
    "normalize.css": "^8.0.1",
    "sass-mq": "^5.0.0"
  }
}
